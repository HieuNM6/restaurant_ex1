<div class="text-xs-right">
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Sort by
    </button>
    <div class="dropdown-menu">
      <%= link_to "Alphabetical", menu_path(sort: "alphabetical", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "View", menu_path(sort: "view", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "Price low to high", menu_path(sort: "price low to high", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "Price high to low", menu_path(sort: "price high to low", section: params[:section]), class:"dropdown-item" %>
    </div>
  </div>
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Filter by cuisine
    </button>
    <div class="dropdown-menu">
      <%= link_to "Pork", menu_path(cuisine: "Pork", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "Chicken", menu_path(cuisine: "Chicken", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "Beef", menu_path(cuisine: "Beef", section: params[:section]), class:"dropdown-item" %>
      <%= link_to "Fish", menu_path(cuisine: "Fish", section: params[:section]), class:"dropdown-item" %>
    </div>
  </div>
</div> <div class="row">
  <div class="col-xl-12">
    <ul class="nav nav-pills">
      <li class="nav-item">
        <%= link_to "All", menu_path, class: 
          "nav-link #{params[:section].blank? ? "active":""}"%>
       </li>
        <% @sections.each do |section| %>
          <li class="nav-item">
            <%= link_to section, menu_path(section: section), class: 
              "nav-link #{section==params[:section] ? "active":""}"%>
          </li>
        <% end %>
    </ul>
  </div>
</div>
